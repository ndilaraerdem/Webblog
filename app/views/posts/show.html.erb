<head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<style>
	img{
		max-width: 100%;
	}
</style>
</head>
<body>
	<div class="container">


<p>
  <div class="card-body">
  	<div class="card-title mb-1 text-dark">
  		 <h3><%= @post.title %></h3><br>
  	  		 <%= image_tag(@post.image) %>
<p class="text-secondary">
  <%= simple_format(@post.body) %>
</p>
  	</div>
  </div>
</p>

<p id="notice"><%= notice %></p>


<%= link_to 'Edit', edit_post_path(@post), class: 'text-light btn btn-primary'%> 
<%= link_to 'Destroy', post_path(@post), class: "text-decoration-none text-light btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Back', posts_path, class: 'text-light btn btn-primary' %>

<br><br>
<h2 class="d-flex justify-content-between mb-4">Comments</h2>


<div id="comments">
<%#Expands to render partial : 'comments/comment', collection: @post.comments %>
<div class="card">
<div class="card-body">
<%= render @post.comments %></div>
</div>
</div>
<div class="card-body">
<%= render 'comments/new', post: @post %></div>
</div>
</div>
<br><br>
</body>